# Configuration for ZL TA-Learning System

# App Settings
APP_NAME="ZL TA-Learning"
APP_VERSION="1.0.0"
APP_MODE="production"

# Jitsi Meet Configuration
JITSI_DOMAIN="meet.jit.si"
JITSI_ENABLE_SCREENSHARING=true
JITSI_ENABLE_RECORDING=false

# Security Settings
SECURITY_CODE_LENGTH=8
MAX_LOGIN_ATTEMPTS=3
SESSION_TIMEOUT_MINUTES=60

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOC_TYPES=pdf,doc,docx,ppt,pptx,txt

# Student Settings
DEFAULT_STUDENT_ID_PREFIX="ZLS"
DEFAULT_COURSE_ID_PREFIX="C"

# Teacher Default Account (for initial setup)
# Note: Change these in production!
DEFAULT_TEACHER_USERNAME="admin"
DEFAULT_TEACHER_PASSWORD="admin123"
DEFAULT_TEACHER_NAME="ครูผู้ดูแลระบบ"
DEFAULT_TEACHER_EMAIL="admin@zl-learning.com"

# Database Settings (if using SQL database in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=zl_learning
# DB_USER=postgres
# DB_PASSWORD=your_password

# Email Settings (if enabling email notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@zl-learning.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
